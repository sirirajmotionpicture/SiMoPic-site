---
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Prose from '../../components/Prose.astro';

import { getCollection, render } from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const posts = await getCollection('films');
  return posts.map(post => ({
    params: { id: post.id },
    props: { post },
  }));
}

// 2. For your template, you can get the entry directly from the prop
const { post } = Astro.props;
const { Content } = await render(post);

---

<BaseLayout pageTitle={post.data.title}>

    <a href="/films"><div class ="pagecat">FILM</div></a>
    <div class = "pagetitle">{post.data.title}</div>

    <div class="grid grid-cols-1 md:grid-cols-3 2xl:grid-cols-4">

        <div class="col-span-1">
            <div class="border-zinc-400 border-1 mb-4">
                <Image src={post.data.cover} alt=""/>
            </div>

            <div class="2xl:hidden">
                <div class="sectionh">âœï¸ Details</div>

                <div class="sectionb">
                    <div class="grid grid-cols-4">
                        <div class="col-span-1"><b>Date</b></div>
                        <div class="col-span-3">{post.data.date.toUTCString().slice(0,16)} {post.data.time}</div>
                        <div class="col-span-1"><b>Project</b></div>
                        <div class="col-span-3"><a href={post.data.projectlink}>{post.data.projectname}</a></div>
                        <div class="col-span-1"><b>Genre</b></div>
                        <div class="col-span-3">{post.data.genre.join(", ")}</div>
                        
                        <div class="col-span-1"><b>Runtime</b></div>
                        <div class="col-span-3">{post.data.runtime} mins</div>
                    </div>      
                </div>
                <a href= {post.data.watchlink} class=""><div class="buttonbg"><div class="button">ğŸï¸ Watch here</div></div></a>    
            </div>
        </div>

        <div class="col-span-2 px-0 md:px-8">
            <Prose>
                <Content />
            </Prose>

            {post.data.displaygallery && 
                <div class="sectionh mt-8">ğŸ“¸ Gallery</div>
                <div class="sectionb">                
                    <div class="flex flex-row flex-nowrap items-center gap-x-4 overflow-x-scroll touch-auto snap-x snap-mandatory">
                        {post.data.gallery.map(gallery =>
                            <div class="snap-center w-full flex-none">
                                <Image src={gallery} alt="" class="" />
                            </div>
                        )}
                    </div>
                    <div class="w-full text-center text-sm text-zinc-500 pt-2">
				        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" /></svg>
				        scroll to see more
				        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 inline">  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" /></svg>
			        </div>
                </div>
            }
            {post.data.displaygallerylink && 
                <div>
                    ğŸ“– read more at: <a class="link" href={post.data.gallerylink}>{post.data.gallerylink}</a>
                </div>
            }
        </div>

        <div class="col-span-1 hidden 2xl:inline">

            <div class="sectionh">âœï¸ Details</div>

