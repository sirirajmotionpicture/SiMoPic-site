---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>

    <a href="../films"><div class ="pagecat">FILM</div></a>
    <div class = "pagetitle">{frontmatter.title}</div>

    <div class="grid grid-cols-1 md:grid-cols-3 2xl:grid-cols-4">

        <div class="col-span-1">
            <div class="border-zinc-400 border-1 mb-4">
                <img src={frontmatter.image}/>
            </div>

            <div class="2xl:hidden">
                <div class="sectionh">✏️ Details</div>

                <div class="sectionb">
                    <div class="grid grid-cols-4">
                        <div class="col-span-1"><b>Date</b></div>
                        <div class="col-span-3">{frontmatter.date.month} {frontmatter.date.day}, {frontmatter.date.year} &nbsp;{frontmatter.date.time}</div>
                        <div class="col-span-1"><b>Project</b></div>
                        <div class="col-span-3"><a href={frontmatter.project.link}>{frontmatter.project.name}</a></div>
                        <div class="col-span-1"><b>Genre</b></div>
                        <div class="col-span-3">{frontmatter.genre}</div>
                        <div class="col-span-1"><b>Runtime</b></div>
                        <div class="col-span-3">{frontmatter.runtime.hour} h {frontmatter.runtime.min} m {frontmatter.runtime.sec} s</div>
                    </div>      
                </div>
                <a href= {frontmatter.watchlink} class=""><div class="button w-full">🎞️ Watch here</div></a>    
            </div>
        </div>

        <div class="col-span-2 px-0 md:px-8">
            <slot />
        </div>

        <div class="col-span-1 hidden 2xl:inline">

            <div class="sectionh">✏️ Details</div>

            <div class="sectionb">
                <div class="grid grid-cols-4">
                    <div class="col-span-1"><b>Date</b></div>
                    <div class="col-span-3">{frontmatter.date.month} {frontmatter.date.day}, {frontmatter.date.year} &nbsp;{frontmatter.date.time}</div>
                    <div class="col-span-1"><b>Project</b></div>
                    <div class="col-span-3"><a href={frontmatter.project.link}>{frontmatter.project.name}</a></div>
                    <div class="col-span-1"><b>Genre</b></div>
                    <div class="col-span-3">{frontmatter.genre}</div>
                    <div class="col-span-1"><b>Runtime</b></div>
                    <div class="col-span-3">{frontmatter.runtime.hour} h {frontmatter.runtime.min} m {frontmatter.runtime.sec} s</div>
                </div>      
            </div>
            <a href= {frontmatter.watchlink} class=""><div class="button w-full">🎞️ Watch here</div></a>
        </div>

    </div>

</BaseLayout>